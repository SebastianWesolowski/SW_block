{
  "editor.formatOnSaveTimeout": 750,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.cursorBlinking": "smooth",
  "editor.detectIndentation": true,
  "editor.formatOnPaste": true,
  "editor.fontLigatures": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "kokororin.vscode-phpfmt"
  },
  "files.eol": "\r\n",
  "phpcs.enable": true,
  "phpcs.standard": "Infinum",
  "phpfmt.indent_with_space": 0,
  "phpfmt.psr2": false,
  "phpfmt.cakephp": true,
  "phpfmt.passes": [
    "SpaceAroundControlStructures",
    "IndentTernaryConditions",
    "DocBlockToComment",
    "GeneratePHPDoc",
    "PHPDocTypesToFunctionTypehint",
    "PrettyPrintDocBlocks",
    "DoubleToSingleQuote",
    "GeneratePHPDoc",
    "SpaceAroundParentheses",
    "SpaceBetweenMethods",
    "SpaceAfterExclamationMark",
    "AddMissingParentheses",
    "AlignDoubleSlashComments",
    "AlignEquals",
    "ShortArray",
    "AlignGroupDoubleArrow",
    "AutoSemicolon",
    "MergeNamespaceWithOpenTag",
    "NewLineBeforeReturn",
    "ReplaceBooleanAndOr",
    "SortUseNameSpace",
    "TrimSpaceBeforeSemicolon",
    "PSR2KeywordsLowerCase",
    "PSR2LnAfterNamespace",
    "PSR2ModifierVisibilityStaticOrder",
    "PSR2SingleEmptyLineAndStripClosingTag",
    "ReindentSwitchBlocks"
  ],
  "phpfmt.exclude": [
    "ReindentComments",
    "StripNewlineWithinClassBody"
  ],
  "css.validate": false,
  "stylelint.enable": true,
  "prettier.stylelintIntegration": true,
  "prettier.singleQuote": true,
  "prettier.printWidth": 80,
  "prettier.trailingComma": "all",
  "prettier.requireConfig": true,
  "prettier.tabWidth": 2,
  "prettier.eslintIntegration": true,
  // "prettier.bracketSpacing": false,
  // "prettier.jsxBracketSameLine": true,
  // "prettier.arrowParens": "avoid",
  // "prettier.jsxSingleQuote": true,
  // "prettier.semi": false,
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "files.exclude": {
    "**/.git": false,
    "**/.cache-loader": false,
    "**/node_modules": false,
    "**/vendor": false,
    "**/composer.lock": false,
    "**/LICENSE.md": false,
    "**/phpcs.xml": false,
    "**/yarn.lock": false,
    "**/.env.example": false,
    "**/.travis.yml": false,
    "**/bitbucket-pipelines.yml": false,
    "**/CHANGELOG.md": false,
    "**/dependencies.yml": false,
    "**/wp-cli.yml": false,
    "**/README.md": false,
    "**/.npmrc": false,
    "**/dist": false,
    "**/.gitattributes": false,
    "**/postcss.config.js": false,
    "**/.stylelintrc": false,
    "**/.prettierrc": false,
    "**/.eslintrc.js": false,
    "**/.eslintignore": false,
    "**/.editorconfig": false,
    "**/.distignore": false,
    "**/.babelrc": false,
  }
}
